{
  "name": "rulebook",
  "version": "1.0.0",
  "description": "Rulebooks!",
  "scripts": {
    "precommit": "lint-staged",
    "build-client": "webpack --config webpack.config.js",
    "build-server": "babel server/main.js --out-dir dist",
    "build": "yarn run build-server && yarn run build-client",
    "start": "yarn run build && node dist/server/main.js"
  },
  "lint-staged": {
    "*.jsx?": [
      "prettier --write --trailing-comma es5 --single-quote",
      "git add"
    ]
  },
  "repository": "https://github.com/camden/rulebook.git",
  "author": "Camden Bickel <cam@bickel.io>",
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-plugin-react": "^6.10.3",
    "html-webpack-plugin": "^2.30.1",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "style-loader": "^0.16.1",
    "webpack": "^2.4.1",
    "webpack-dev-server": "^2.4.4"
  },
  "dependencies": {
    "babel-loader": "^7.0.0",
    "express": "^4.15.4",
    "react": "^15.5.4",
    "react-dom": "^15.5.4"
  }
}
