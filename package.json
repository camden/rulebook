{
  "name": "rulebook",
  "version": "1.0.0",
  "description": "Rulebooks!",
  "license": "UNLICENSED",
  "scripts": {
    "precommit": "lint-staged",
    "flow-check": "flow check --show-all-errors | flow-result-checker",
    "build-client": "webpack --config webpack.config.js",
    "watch-client": "NODE_ENV=dev webpack --config webpack.config.js --watch",
    "build-server": "babel server/ --out-dir dist/server",
    "start-server": "yarn run build-server && node dist/server/main.js rulebook-server",
    "stop-server": "killall -SIGINT rulebook-server",
    "watch-server": "chokidar 'server/**.js' -c 'yarn run stop-server; yarn run start-server' --initial",
    "start": "yarn run build-client && yarn run start-server"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write --trailing-comma es5 --single-quote",
      "git add"
    ]
  },
  "repository": "https://github.com/camden/rulebook.git",
  "author": "Camden Bickel <cam@bickel.io>",
  "devDependencies": {
    "chokidar-cli": "^1.2.0",
    "eslint": "^3.19.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-react": "^6.10.3",
    "flow-bin": "^0.52.0",
    "flow-result-checker": "^0.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.0.3",
    "prettier": "^1.5.3",
    "webpack-dev-server": "^2.4.4"
  },
  "dependencies": {
    "anchorate": "^1.1.0",
    "atob": "^2.0.3",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "body-parser": "^1.17.2",
    "color": "^2.0.0",
    "css-loader": "^0.28.5",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "front-matter": "^2.1.2",
    "ghrequest": "^1.0.1",
    "he": "^1.1.1",
    "hedron": "^0.7.1",
    "html-webpack-plugin": "^2.30.1",
    "marksy": "^5.0.0",
    "node-fetch": "^1.7.2",
    "prerender-node": "^2.7.2",
    "prop-types": "^15.5.10",
    "react": "^15.5.4",
    "react-debounce-input": "^3.0.1",
    "react-dom": "^15.5.4",
    "react-fastclick": "^3.0.2",
    "react-helmet": "^5.2.0",
    "react-media": "^1.6.1",
    "react-progress": "^0.0.12",
    "react-router": "^4.1.2",
    "react-router-dom": "^4.1.2",
    "react-string-replace": "^0.4.0",
    "react-tippy": "^1.2.1",
    "redis": "^2.8.0",
    "style-loader": "^0.18.2",
    "styled-components": "^2.1.2",
    "webfontloader": "^1.6.28",
    "webpack": "^2.4.1",
    "whatwg-fetch": "^2.0.3"
  }
}
